  <flap>
    <name>flaps</name>
    <mode>in-transit</mode>
    <path>Aircraft/A310/Sounds/flaps.wav</path>
    <property>/surface-positions/flap-pos-norm</property>
    <volume>
      <factor>0.45</factor>
    </volume>
  </flap>

  <wind>
    <name>wind</name>
    <mode>looped</mode>
    <path>Aircraft/A310/Sounds/wind.wav</path>
    <property>/velocities/airspeed-kt</property>
    <volume>
      <property>/position/altitude-ft</property>
      <factor>-0.000015</factor>
      <offset>1.0</offset>
      <min>0.1</min>
      <max>1.0</max>
    </volume>
    <volume>
      <property>/velocities/airspeed-kt</property>
      <factor>0.0015</factor>
      <min>0.03</min>
      <max>0.25</max>
    </volume>
    <pitch>
      <property>/velocities/airspeed-kt</property>
      <factor>0.01</factor>
      <offset>1.25</offset>
    </pitch>
  </wind>

                 <overspeed>
			<name>Overspeed warning</name>
			<path>Aircraft/A310/Sounds/overspeed2.wav</path>
			<mode>looped</mode>
			<condition>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>345</value>
				</greater-than>
			</condition>
			<volume>
				<factor>1.0</factor>
			</volume>
		</overspeed>  

                 <stall>
			<name>stall</name>
			<mode>looped</mode>
			<path>/Aircraft/A310/Sounds/stall.wav</path>
			<type>avionics</type>
			<condition>
				<property>warnings/stall/active</property>
			</condition>
			<volume>
				<property>sim/sound/effects/volume</property>
			</volume>
			
			<reference-dist>10</reference-dist>
			<max-dist>100.0</max-dist>
		</stall>
		
  <nosmoke>
    	<name>no smoking sign</name>
    	<path>Aircraft/A310/Sounds/cabinalert.wav</path>
    	<mode>once</mode>
    	<condition>
    		<property>sim/sound/no-smoking-sign</property>
    	</condition>
    	<volume>
    		<offset>1</offset>
    	</volume>
    	<reference-dist>10.0</reference-dist>
    	<max-dist>100.0</max-dist>
    </nosmoke>
    


