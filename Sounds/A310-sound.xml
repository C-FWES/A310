<?xml version="1.0"?>

<PropertyList>

<fx>
  <engine>
    <name>left engine</name>
    <path>Aircraft/A310/Sounds/jet.wav</path>
    <mode>looped</mode>
    <condition>
      <not>
        <property>controls/engines/engine[0]/cutoff</property>
      </not>
    </condition>
    <volume>
      <property>engines/engine[0]/thrust-lbs</property>
      <factor>0.15</factor>
      <min>0.0</min>
      <max>1</max>
    </volume>
    <volume>
      <property>sim/sound/volume</property>
      <value>1</value>
    </volume>
    <position>
      <x>0</x>
      <y>9.8</y>
      <z>-3</z>
    </position>
    <reference-dist>200.0</reference-dist>
    <max-dist>500.0</max-dist>
  </engine>
  <engine>
    <name>left n1</name>
    <path>Aircraft/A310/Sounds/whine.wav</path>
    <mode>looped</mode>
    <property>engines/engine[0]/n1</property>
    <volume>
      <property>engines/engine[0]/n1</property>
      <factor>0.12</factor>
      <min>0.0</min>
      <max>0.6</max>
    </volume>
    <volume>
      <property>sim/sound/volume</property>
    </volume>
    <pitch>
      <property>/engines/engine[0]/n1</property>
      <offset>0</offset>
      <factor>0.02</factor>
      <min>0.0</min>
      <max>2.0</max>
    </pitch>
    <position>
      <x>0</x>
      <y>-9.8</y>
      <z>-3</z>
    </position>
    <reference-dist>10.0</reference-dist>
    <max-dist>30.0</max-dist>
  </engine>

	<engine>
			<name>low l out</name>
			<mode>looped</mode>
			<path>Aircraft/A310/Sounds/xlow.wav</path>
			<property>engines/engine[0]/n1</property>
			<condition>
				<not><property>sim/current-view/internal</property></not>
			</condition>
			<volume>
				<property>engines/engine[0]/n1</property>
				<factor>0.044</factor>
				<max>1</max>
			</volume>
			<pitch>
				<property>engines/engine[0]/n1</property>
				<offset>0</offset>
				<factor>0.02</factor>
				<max>2</max>
			</pitch>
		</engine>
		
		<engine>
			<name>low r out</name>
			<mode>looped</mode>
			<path>Aircraft/A310/Sounds/xlow.wav</path>
			<property>engines/engine[1]/n1</property>
			<condition>
				<not><property>sim/current-view/internal</property></not>
			</condition>
			<volume>
				<property>engines/engine[1]/n1</property>
				<factor>0.044</factor>
				<max>1</max>
			</volume>
			<pitch>
				<property>engines/engine[1]/n1</property>
				<offset>0</offset>
				<factor>0.02</factor>
				<max>2</max>
			</pitch>
		</engine>


  <engine>
    <name>right engine</name>
    <path>Aircraft/A310/Sounds/jet.wav</path>
    <mode>looped</mode>
    <condition>
      <not>
        <property>controls/engines/engine[1]/cutoff</property>
      </not>
    </condition>
    <volume>
      <property>/engines/engine[1]/thrust-lbs</property>
      <factor><factor>0.15</factor></factor>
      <min>0.0</min>
      <max>1.0</max>
    </volume>
    <volume>
      <property>sim/sound/volume</property>
    </volume>
    <position>
      <x>0</x>
      <y>-9.8</y>
      <z>-3</z>
    </position>
    <reference-dist>200.0</reference-dist>
    <max-dist>500.0</max-dist>
  </engine>

  <engine>
    <name>right n1</name>
    <path>Aircraft/A310/Sounds/whine.wav</path>
    <mode>looped</mode>
    <property>engines/engine[1]/n1</property>
    <volume>
      <property>engines/engine[1]/n1</property>
      <factor>0.12</factor>
      <min>0.0</min>
      <max>0.6</max>
    </volume>
    <volume>
      <property>sim/sound/volume</property>
    </volume>
    <pitch>
      <property>/engines/engine[1]/n1</property>
      <offset>0</offset>
      <factor>0.02</factor>
      <min>0.0</min>
      <max>2.0</max>
    </pitch>
    <position>
      <x>0</x>
      <y>-9.8</y>
      <z>-3</z>
    </position>
    <reference-dist>10.0</reference-dist>
    <max-dist>30.0</max-dist>
  </engine>

  <rumble>
    <name>rumble</name>
    <mode>looped</mode>
    <path>Aircraft/A310/Sounds/rumble.wav</path>
    <condition>
      <or>
	<property>/gear/gear[0]/wow</property>
	<property>/gear/gear[1]/wow</property>
	<property>/gear/gear[2]/wow</property>
      </or>
    </condition>
    <volume>
      <property>/velocities/airspeed-kt</property>
      <type>log</type>
      <factor>0.5</factor>
    </volume>
  </rumble>

 <rain>
    	<name>rain</name>
    	<mode>looped</mode>
    	<path>Aircraft/A310/Sounds/rain.wav</path>
    	<condition>
    		<greater-than>
    			<property>/environment/rain-norm</property>
    			<value>0.2</value>
    		</greater-than>
    	</condition>
    	<volume>
    		<property>/environment/rain-norm</property>
    		<factor>1.00</factor>
    		<offset>0.00</offset>
    		<min>0.4</min>
    		<max>0.9</max>
    	</volume>
    	<pitch>
    		<property>/velocities/airspeed-kt</property>
    		<factor>0.001</factor>
    		<offset>1.0</offset>
    	</pitch>
    </rain>


  <gear>
    <name>gear</name>
    <mode>in-transit</mode>
    <path>Aircraft/A310/Sounds/gear.wav</path>
    <property>/gear/gear[0]/position-norm</property>
    <pitch>
      <internal>dt_play</internal>
      <offset>1.0</offset>
      <factor>-0.001</factor>
    </pitch>
  </gear>
 
       <gearwarn>
		<name>Gear warning</name>
		<path>/Aircraft/A310/Sounds/gearwarn.wav</path>
		<mode>looped</mode>
		<type>avionics</type>
		<condition>
			<less-than-equals>
				<property>position/altitude-agl-ft</property>
				<value>400</value>
			</less-than-equals>
			<less-than-equals>
				<property>/velocities/vertical-speed-fps</property>
				<value>-1</value>
			</less-than-equals>
			<not>
				<property>/controls/gear/gear-down</property>
			</not>
		</condition>
		<volume>
			<property>sim/sound/effects/volume</property>
		</volume>
		<reference-dist>10</reference-dist>
		<max-dist>100</max-dist>
	</gearwarn>

